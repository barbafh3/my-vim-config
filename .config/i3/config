####### Startup Scripts and Commands ########

#exec_always --no-startup-id ~/.scripts/per-workspace-layout.pl
# Disable caps and set Caps key to escape
#exec_always --no-startup-id xmodmap ~/.Xmodmap 

exec_always export PATH="${PATH}:${HOME}/.local/bin/"

# Set Caps Lock to Escape and PrtSc to Super key
exec_always --no-startup-id setxkbmap -option caps:escape && setxkbmap -option altwin:prtsc_rwin && notify-send "Keys remapped"
# Load Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh 
# Enable compton for all applications
exec_always --no-startup-id compton -f --config ~/.config/compton/compton.conf
# Set volume to 100% - 65500 (40% == 26000)
exec_always --no-startup-id pacmd set-sink-volume 0 65550
# Automount USB drives using udiskie
exec_always --no-startup-id udiskie &
# Run pamac-tray on startup
# exec_always --no-startup-id pamac-tray
# Run dunst for desktop notifications
exec_always --no-startup-id dunst
# Start KDE Connect 
exec_always --no-startup-id /usr/lib/kdeconnectd | notify-send "KDE Connect is running" &> /dev/null
# Start KDE Connect tray indicator
exec_always --no-startup-id /usr/bin/indicator-kdeconnect
# Disable suspend and energy saving
exec_always --no-startup-id xset s off && xset -dpms
# Starts keyrings for pamac-manager
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 & eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg) &
# Adds ~/.scripts folder to PATH
exec_always --no-startup-id PATH=$PATH:~/.scripts ; export PATH
# Starts TLP for battery management
exec_always --no-startup-id tlp start && notify-send "TLP started"
# Set wallpaper
exec_always --no-startup-id $HOME/.scripts/utils/random-wallpaper
# Run Simple X Hotkey Daemon
exec_always --no-startup-id sxhkd
# Run Dropbox
exec --no-statup-id dropbox && notify-send "Dropbox started"
